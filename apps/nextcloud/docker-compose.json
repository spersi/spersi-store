{
	"services":[
		{
			"name": "nextcloud",
			"image": "nextcloud:latest",
			"isMain": true,
			"internalPort": 80,
            "volumes": [
                {
                  "hostPath": "${APP_DATA_DIR}/data/nextcloud",
                  "containerPath": "/var/www/html",
                  "readOnly": false
                }
         	   ]
	      "environment": {
		         "NEXTCLOUD_TRUSTED_DOMAINS": "${APP_DOMAIN}",
        		 "TRUSTED_PROXIES": "172.16.0.0/12",
		         "OVERWRITEPROTOCOL": "${APP_PROTOCOL:-http}"
	      }
		}
	]
}
